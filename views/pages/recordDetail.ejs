<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', {title: 'Record Detail'}); %>
<body>
  <%- include('../partials/header'); %>
  <% if (added) { %>
    <p>Record successfully added!</p>
  <% } %>
  <main>
    <section id="details">
      <span><%= record.date %></span>
      <h2><%= record.title %></h2>
      <p><%= record.description %></p>
    </section>
    <section>
        <form id="delete" action="/record/<%= record.id %>" method="POST" >
          <input type="hidden" name="_method" value="DELETE">
          <input type="hidden" name="patientId" value="<%= patient_id %>">
          <button>Delete</button>
      </form>
      <a href="/patient/<%= patient_id %>">Back</a>
    </section>
  </main>
  <%- include('../partials/footer'); %>
</body>
</html>