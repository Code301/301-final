<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', {title: 'Record Detail'}); %>
<body>
  <%- include('../partials/header', {location: 'patient'}); %>
  <% if (added) { %>
    <p>Record successfully added!</p>
  <% } %>
  <a class="submit back" href="/patient/<%= patient_id %>">‚Üê Back</a>
  <main class="rd-main">
    <section id="details">
      <span><%= record.date %></span>
      <h2><%= record.title %></h2>
      <p><%= record.description %></p>
    </section>
    <section>
      <form id="deleteRec" action="/record/<%= record.id %>" method="POST" >
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="patientId" value="<%= patient_id %>">
        <button class="submit">Delete</button>
      </form>
    </section>
  </main>
  <%- include('../partials/footer'); %>
</body>
<script src="/scripts/delete.js"></script>
</html>